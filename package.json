{
	"name": "koa-boilerplate",
	"version": "1.0.0",
	"description": "Koa Boilerplate",
	"main": "index.js",
	"scripts": {
		"build": "tsc",
		"clean": "rimraf ./build",
		"commit": "run-s clean build lint test",
		"coveralls": "cat ./coverage/lcov.info | coveralls",
		"lint": "eslint . --ext .ts",
		"start:dev": "nodemon --watch \"src/**/*.ts\" --exec \"ts-node\" src/server.ts",
		"test": "jest --collectCoverage",
		"test:watch": "jest --watchAll"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/eflem00/koa-boilerplate.git"
	},
	"author": "Evan Fleming",
	"license": "MIT",
	"bugs": {
		"url": "https://github.com/eflem00/koa-boilerplate/issues"
	},
	"homepage": "https://github.com/eflem00/koa-boilerplate#readme",
	"dependencies": {
		"awilix": "^4.2.5",
		"awilix-koa": "^4.0.0",
		"dotenv": "^8.2.0",
		"http-status-codes": "^1.4.0",
		"koa": "^2.11.0",
		"koa-bodyparser": "^4.3.0",
		"pg": "^8.0.0",
		"winston": "^3.2.1"
	},
	"devDependencies": {
		"@types/jest": "^25.2.1",
		"@types/koa": "^2.11.3",
		"@types/node": "^13.11.0",
		"@types/pg": "^7.14.3",
		"@types/sinon": "^9.0.0",
		"@typescript-eslint/eslint-plugin": "^2.26.0",
		"@typescript-eslint/parser": "^2.26.0",
		"coveralls": "^3.0.11",
		"eslint": "^6.8.0",
		"jest": "^25.2.7",
		"nodemon": "^2.0.2",
		"npm-run-all": "^4.1.5",
		"rimraf": "^3.0.2",
		"sinon": "^9.0.1",
		"supertest": "^4.0.2",
		"ts-jest": "^25.3.1",
		"ts-node": "^8.8.1",
		"typescript": "^3.8.3"
	}
}
