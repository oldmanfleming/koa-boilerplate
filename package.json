{
	"name": "koa-boilerplate",
	"version": "1.0.0",
	"description": "Koa Boilerplate",
	"main": "index.js",
	"author": "Evan Fleming",
	"license": "MIT",
	"homepage": "https://github.com/eflem00/koa-boilerplate#readme",
	"repository": {
		"type": "git",
		"url": "git+https://github.com/eflem00/koa-boilerplate.git"
	},
	"bugs": {
		"url": "https://github.com/eflem00/koa-boilerplate/issues"
	},
	"scripts": {
		"build": "rimraf ./build && tsc",
		"commit": "npm-run-all build lint unittest docker:up wait integrationtest docker:down",
		"coveralls": "cat ./coverage/lcov.info | coveralls",
		"eject": "node scripts/eject.js",
		"integrationtest": "jest --testPathPattern=tests/integration/.*.spec.ts",
		"integrationtest:watch": "jest --watchAll --testPathPattern=tests/integration/.*.spec.ts",
		"lint": "eslint . --ext .ts",
		"docker:up": "docker-compose up --force-recreate --build -d",
		"docker:down": "docker-compose down",
		"start:dev": "nodemon --watch \"src/**/*.ts\" --exec \"ts-node\" src/Server.ts",
		"unittest": "jest  --collectCoverage --testPathPattern=tests/unit/.*.spec.ts --no-cache",
		"unittest:watch": "jest --watchAll --testPathPattern=tests/unit/.*.spec.ts --no-cache",
		"wait": "node scripts/wait 3000"
	},
	"jest": {
		"moduleFileExtensions": [
			"js",
			"ts"
		],
		"collectCoverageFrom": [
			"./src/**/*.ts",
			"!./src/entities/*.ts"
		],
		"transform": {
			"\\.ts$": "ts-jest"
		},
		"coverageThreshold": {
			"global": {
				"branches": 100,
				"functions": 100,
				"lines": 100,
				"statements": 100
			}
		}
	},
	"prettier": {
		"printWidth": 120,
		"tabWidth": 2,
		"useTabs": true,
		"semi": true,
		"singleQuote": true,
		"trailingComma": "all"
	},
	"eslintConfig": {
		"root": true,
		"parser": "@typescript-eslint/parser",
		"plugins": [
			"@typescript-eslint"
		],
		"extends": [
			"eslint:recommended",
			"plugin:@typescript-eslint/eslint-recommended",
			"plugin:@typescript-eslint/recommended"
		],
		"rules": {
			"@typescript-eslint/explicit-function-return-type": 0,
			"@typescript-eslint/no-explicit-any": 0,
			"@typescript-eslint/typedef": [
				"error",
				{
					"arrayDestructuring": true,
					"objectDestructuring": true,
					"variableDeclaration": true
				}
			],
			"@typescript-eslint/no-inferrable-types": 0
		}
	},
	"eslintIgnore": [
		"node_modules",
		"build",
		"coverage",
		"scripts"
	],
	"dependencies": {
		"@hapi/joi": "^17.1.1",
		"awilix": "^4.2.5",
		"awilix-koa": "^4.0.0",
		"dotenv": "^8.2.0",
		"http-status-codes": "^1.4.0",
		"jsonwebtoken": "^9.0.0",
		"kcors": "^2.2.2",
		"koa": "^2.11.0",
		"koa-bodyparser": "^4.3.0",
		"koa-helmet": "^5.2.0",
		"pg": "^8.0.0",
		"reflect-metadata": "^0.1.13",
		"slugify": "^1.4.0",
		"typeorm": "^0.2.24",
		"winston": "^3.2.1"
	},
	"devDependencies": {
		"@types/hapi__joi": "^16.0.12",
		"@types/jest": "^25.2.1",
		"@types/jsonwebtoken": "^8.3.9",
		"@types/kcors": "^2.2.3",
		"@types/koa": "^2.11.3",
		"@types/koa-bodyparser": "^4.3.0",
		"@types/node": "^13.11.0",
		"@types/pg": "^7.14.3",
		"@types/sinon": "^9.0.0",
		"@types/supertest": "^2.0.9",
		"@typescript-eslint/eslint-plugin": "^2.26.0",
		"@typescript-eslint/parser": "^2.26.0",
		"coveralls": "^3.0.11",
		"eslint": "^6.8.0",
		"jest": "25.2.1",
		"nodemon": "^2.0.2",
		"npm-run-all": "^4.1.5",
		"random-int": "^2.0.1",
		"rimraf": "^3.0.2",
		"sinon": "^9.0.1",
		"supertest": "^4.0.2",
		"ts-jest": "^25.3.1",
		"ts-node": "^8.8.1",
		"typescript": "^3.8.3"
	}
}
